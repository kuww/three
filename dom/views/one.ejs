<!doctype html>
<html>
<head>
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">
    <style>
        body,html{
            width: 100%;
            height: 100%;
            color: #ffffff;
        }
        body{
            background: url("/images/bg.jpg")no-repeat center top/cover;
        }
        div{
            margin: 20px;
        }
        .box{
            margin: 200px auto;
            width: 400px;
        }
        h3{
            margin-left: 20px;
            color: #fff;
        }
        .btn{
            margin-left:20px;
        }
    </style>
</head>
<div class="box">
<h3>欢迎来到注册页面</h3>

    <div>用户名:<input type=text class="form-control"></div>
    <div>密　码:<input type=password class="form-control"></div>
    <div class="dropdown">
        <select class="form-control">
            <option value="1" selected="selected">初级教师</option>
            <option value="2">中级教师</option>
            <option value="3">高级教师</option>
        </select>
    </div>
    <button class="btn btn-danger">注册</button>
</div>
<script src=javascripts/jquery-1.11.0.js></script>
<script>
    $("button").click(function () {
        var str1=$("input").eq(0).val();
        var str2=$("input").eq(1).val();
        var sr3=$("option:selected").val()
        console.log(sr3)
        if(str1.length>0&&str2.length>0){
            $.ajax({
                type:"POST",
                url:"/users/one",
                data:{name:str1,password:str2,xuan:sr3},
                success: function (data) {
                    if(data==1){
                        alert("注册成功")
                        location.href="/two"
                    }
                    if(data==0){
                        alert("用户名已存在,请重新输入")
                    }
                }
            })

        }else {
            alert("不能为空")
        }



    })


</script>
</body>
</html>