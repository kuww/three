<!doctype html>
<html lang="en">
<head>
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">
    <style>
        body,html{
            width: 100%;
            height: 100%;
            color: #ffffff;
        }
        body{
            background: url("/images/bg2.jpg")no-repeat center;
        }
        div{
            margin: 10px;
        }
        .btn{
            margin-left: 10px;
        }
        h3{
            margin-left: 10px;
        }
        #box{width: 400px;
        margin: 200px auto}
    </style>
</head>
<body>

<div id="box">

    <form class="form-horizontal">
        <div class="form-group">

            <div class="col-sm-10">
                <label for="exampleInputName2">账户</label>
                <input type="text" class="form-control" id="exampleInputName2" placeholder="用户名">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">密码</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword3" placeholder="密码">
            </div>
        </div>
        <div class="form-group">
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">

            </div>
        </div>
    </form>
    <button class="btn btn-default">登录</button>
</div>

<script src=javascripts/jquery-1.11.0.js></script>
<script>
    $("button").click(function () {
        var str1=$("input").eq(0).val();
        var str2=$("input").eq(1).val();
        console.log(str2,str1)
        $.ajax({
                type:"POST",
                url:"/users/two",
                data:{name:str1,password:str2},
                success: function (data) {
                       if(data==1){
                           alert("登录成功")
                           location.href="/"
                       }else {
                           alert("登录失败")
                       }
                    }
                }
        )



    })
</script>
</body>
</html>
